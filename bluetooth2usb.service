[Unit]
Description=Bluetooth to USB HID proxy
After=multi-user.target

[Service]
User=root
ExecStart=python3.11 /usr/bin/bluetooth2usb.py -k /dev/input/event2 -m /dev/input/event3
Environment=PYTHONUNBUFFERED=1
Restart=on-failure
Documentation=https://github.com/quaxalber/bluetooth2usb

[Install]
WantedBy=multi-user.target